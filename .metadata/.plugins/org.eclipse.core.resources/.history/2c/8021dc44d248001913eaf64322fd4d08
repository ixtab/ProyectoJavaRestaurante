onload = inicio;

function inicio(){

}

function buscar(){
	var codigo = document.getElementById("cp").value;
	var xhr = new XMLHttpRequest();

    xhr.onreadystatechange = function () {
    	alert(xhr.readyState);
        if (xhr.readyState == 4) {
            if (xhr.status == 200)
            	document.getElementById("resultado").innerHTML = xhr.responseText;
            else
            	document.getElementById("resultado").innerHTML = "Error AJAX";
        }
    }

    var url = "localhost:8080?cp="+codigo;
   
    
    alert("1. iniciando peticion Ajax");
    xhr.open("GET", url);
    xhr.send();
}